{
  "compilerOptions": {
    "module": "esnext",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,

    "noEmit": false,
    "rootDir": "./src/",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "./dist/types",

  },
  "include": ["src"],
}
